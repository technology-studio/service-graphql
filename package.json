{
  "name": "@txo/service-graphql",
  "version": "5.0.3",
  "description": "Technology Studio - Service graphql",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/technology-studio/service-graphql.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://github.com/technology-studio/"
  },
  "license": "UNLICENSED",
  "private": false,
  "scripts": {
    "build": "yarn build:clean && yarn build:lib",
    "build:clean": "yarn rimraf lib",
    "build:lib": "yarn tsc",
    "build:watch": "yarn tsc --watch",
    "test": "jest",
    "test:watch": "concurrently \"yarn build:watch\" \"yarn test --watch\"",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "compare-boilerplate-version": "./scripts/compare-boilerplate-version.sh",
    "lint": "eslint --max-warnings 0 .",
    "fixcode": "eslint . --fix",
    "git-hook": "yarn -s lint-staged",
    "prepare": "husky && yarn build",
    "print-txo-packages": "yarn list 2> /dev/null|grep @txo|sed 's/.*\\(@txo[^@]*\\)@^*\\([^ ]*\\).*/\\1@\\2/g'|sort|uniq",
    "sanity": "yarn lint:ci && yarn build && tsc --noEmit && yarn test --coverage && yarn compare-boilerplate-version && echo 'success'",
    "semantic-release": "semantic-release",
    "update-boilerplate-version": "./scripts/update-boilerplate-version.sh",
    "lint:ci": "yarn eslint -c eslint-ci.config.js --cache . && yarn txo-eslint ccr --cache",
    "type-check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@txo/log": "^2.0.16",
    "@txo/service-prop": "^3.0.3",
    "lodash.get": "^4.4.2"
  },
  "peerDependencies": {
    "@txo-peer-dep/service-graphql": "^3.3.3"
  },
  "devDependencies": {
    "@apollo/client": "^3.13.8",
    "@txo-peer-dep/log": "^4.0.4",
    "@txo-peer-dep/service-graphql": "^3.3.3",
    "@txo/commitlint": "^1.0.24",
    "@txo/log-console": "^3.0.0",
    "@txo/semantic-release": "^2.0.10",
    "@txo/tsconfig-cjs": "^2.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash.get": "^4.4.9",
    "@types/node": "^22.15.31",
    "@types/node-fetch": "^2.6.12",
    "@types/react": "^18.3.23",
    "concurrently": "^9.1.2",
    "eslint-config-txo-package-typescript": "^1.0.100",
    "graphql": "^16.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
